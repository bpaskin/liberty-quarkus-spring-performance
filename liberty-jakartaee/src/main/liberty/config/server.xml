<?xml version="1.0" encoding="UTF-8"?>
<server description="Liberty Jakarta EE Server">

    <!-- Enable features -->
    <!-- jakartaee-10.0 includes JPA 3.1 with EclipseLink as the default JPA provider -->
    <featureManager>
        <feature>beanValidation-3.0</feature>
        <feature>cdi-4.0</feature>
        <feature>restfulWS-3.1</feature>
        <feature>jsonb-3.0</feature>
        <feature>persistence-3.1</feature>
        <feature>concurrent-3.0</feature>
    </featureManager>

    <!-- To access this server from a remote client add a host attribute to the following element, e.g. host="*" -->
    <httpEndpoint id="defaultHttpEndpoint"
                  httpPort="8080"
                  httpsPort="8443" 
                  host="*" />

    <!-- Automatically expand WAR files and EAR files -->
    <applicationManager autoExpand="true"/>

    <!-- PostgreSQL DataSource Configuration -->
    <library id="postgresql-library">
        <fileset dir="${server.config.dir}/lib/postgresql" includes="*.jar"/>
    </library>

    <dataSource id="DefaultDataSource" jndiName="jdbc/fruitsDB">
        <jdbcDriver libraryRef="postgresql-library"/>
        <properties.postgresql 
            serverName="localhost"
            portNumber="5432"
            databaseName="fruits"
            user="fruits"
            password="fruits"/>
        <connectionManager maxPoolSize="20" minPoolSize="5"/>
    </dataSource>

    <!-- Application Configuration -->
    <webApplication id="liberty-jakartaee" 
                    location="liberty-jakartaee.war" 
                    contextRoot="/">
        <classloader delegation="parentLast"/>
    </webApplication>

    <!-- Logging Configuration -->
    <!-- Enable EclipseLink SQL logging for debugging -->
    <logging traceSpecification="*=info"
             maxFileSize="20"
             maxFiles="10"
             consoleLogLevel="INFO"/>

</server>

